/* Note=> I have written with function method like a high level user */
#include <stdio.h>

// Function to take input for the array
void inputNumbers(int arr[]) {
    for (int i = 0; i < 10; i++) {
        printf("Enter number %d: ", i + 1);
        scanf("%d", &arr[i]);  // Store input in the array
    }
}

// Function to display the numbers
void displayNumbers(int arr[]) {
    printf("The numbers you entered are:\n");
    for (int i = 0; i < 10; i++) {
        printf("%d ", arr[i]);  // Print each number from the array
    }
    printf("\n");
}

int main() {
    int numbers[10];  // Array to hold 10 numbers

    // Call the input function
    inputNumbers(numbers);

    // Call the display function
    displayNumbers(numbers);

    return 0;
}
